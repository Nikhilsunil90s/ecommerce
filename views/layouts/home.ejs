<%- include('../includes/header') %>
<div class="container">
    <div class="text-center">
        <h2>Welcome To Shope Home!</h2>
        <% if(products.length > 0) { %>
            <% for(let i of products) { %>
                <div class="card">
                    <div class="card-header">
                        <h1>
                            <%= i.prodName %>
                        </h1>
                    </div>
                    <div class="card-body">
                        <pre>Product Information</pre>
                    </div>
                    <div class="card-footer">
                        <p1>Price : <%= i.prodPrice %>
                        </p1>
                    </div>
                </div>
                <% } %>
        <% } else {  %>
            <div class="text-center">
            <pre>No Products Yet!</pre>
            </div>
        <% } %>
    </div>
</div>
<%- include('../includes/footer') %>
